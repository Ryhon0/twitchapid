name "dbot"
description "A custom Twitch bot for my channel"
authors "Phillip Ledger <phillip@philderbast.com>"
copyright "Copyright Â© 2017"
license "BSD 2-clause"

targetType "executable"
targetPath "build"
workingDirectory "data"

dependency "dyaml" version="~>0.6.3"
dependency "d2sqlite3" version="~>0.16.2"
subConfigurations "d2sqlite3" "all-included"

configuration "windows" {
  name "windows"
  platform "windows"
  targetType "executable"
  sourcePaths "windows/source"
  targetPath "build"
  targetName "dbot"

  libs "gdi32" "user32"
}

configuration "linux" {
  name "linux"
  platform "linux"
  targetType "executable"
  sourcePaths "linux/source"
  targetPath "build"
  targetName "dbot"
}